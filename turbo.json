{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "tasks": {
    "db:generate": {
      "cache": false,
      "persistent": true,
      "outputs": [
      "src/generated/prisma/**"      ]
    },
    "db:migrate": {
      "cache": false,
      "persistent": false
    },
    "db:deploy": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
